@model AstroBlog.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layouttest.cshtml";
}



<div class="wrapper">
	<h2>Login</h2>
	<form method="post">
		<div class="input-box">
			<input type="text" id="Username" name="Username" class="form-control" asp-for="Username" placeholder="Enter your name" required />
			<span class="text-danger" asp-validation-for="Username"></span>
		</div>
	
		<div class="input-box">
			<input type="password" id="Password" name="Password" class="form-control" asp-for="Password" placeholder="Enter password" required minlength="6" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>

		<div class="input-box button">
			<input type="submit" value="Login Now">
		</div>
		<div class="text">
			<h3>Don`t have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Register now</a></h3>
		</div>
	</form>
</div>

