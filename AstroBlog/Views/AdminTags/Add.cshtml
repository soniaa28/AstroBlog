@model AstroBlog.Models.ViewModel.AddTagRequest
@{
}

<section class="inner-banner py-5">
	<div class="w3l-breadcrumb py-lg-5 ">
		<div class="container pt-5 pb-sm-4 pb-2">
			<h4 class="inner-text-title font-weight-bold pt-5">Blog</h4>
			<ul class="breadcrumbs-custom-path">
				<li><a href="index.html">Home</a></li>
				<li class="active"><i class="fas fa-angle-right mx-2"></i>Add tag</li>
			</ul>
		</div>
	</div>
</section>


<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>